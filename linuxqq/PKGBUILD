pkgname=linuxqq
pkgver=3.2.9.24402
pkgrel=1
pkgdesc="New Linux QQ based on Electron"
arch=(loong64)
url="https://im.qq.com/linuxqq/index.shtml"
license=(custom)
groups=('apps')
depends=(liblol)
options=(strip !debug)
_downver=`echo ${pkgver}|sed -r 's/([0-9]+).([0-9]+).([0-9]+).([0-9]+)/\1.\2.\3-\4/'`
source=("https://60-6-2-199.volcsiriusbd.com/dldir1.qq.com/qqfile/qq/QQNT/442cbbb1/${pkgname}_${_downver}_loongarch64.deb"
    linuxqq.sh)
sha256sums=('4f17a048b3c818534fb5def3fa59b2213c5b5115ddf9e672d805106a27f2f3fb'
            'fcc8ab360be9fde853b9a4279251072df6807a3bd697677cd8175fb0b89d9be7')

package() {
  tar -C ${pkgdir} -xf data.tar.xz
  install -Dm755 ${srcdir}/linuxqq.sh ${pkgdir}/usr/bin/linuxqq
}
