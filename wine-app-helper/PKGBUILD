pkgname=wine-app-helper
pkgver=0.1
pkgrel=1
pkgdesc="Helper tools to run wine bottle apps"
arch=('any')
url="https://www.zhcn.cc"
license=('GPL')
depends=('wine' 'zenity')
source=(wine-run
    wine-mkapp)
sha256sums=('ba7aa611332ece6ad11ef13fc4fe0ebb3ecd728991c0899548a35e8986fe1400'
            '41ab2a23fbc667e8dfc8fedf8f44d6360f6f74ce7ec58aa63b9d3e8e6cbce2d7')

package() {
  install -Dm755 $srcdir/wine-run ${pkgdir}/usr/bin/wine-run
  install -Dm755 $srcdir/wine-mkapp ${pkgdir}/usr/bin/wine-mkapp
}
