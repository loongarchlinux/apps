pkgname=wine-app-helper
pkgver=0.1
pkgrel=1
pkgdesc="Helper tools to run wine bottle apps"
arch=('any')
url="https://www.zhcn.cc"
license=('GPL')
depends=('wine' 'zenity')
source=(wine-run
    wine-mkapp)
sha256sums=('7d6c5a0fa0ace2391bf1e2771bb626b8363038bc1883dff7cdcd9a576124b42a'
            'b2079b5edbc73614edd73cd6c90d82bf3ca7e3e77e48735a26c29c47dc163073')

package() {
  install -Dm755 $srcdir/wine-run ${pkgdir}/usr/bin/wine-run
  install -Dm755 $srcdir/wine-mkapp ${pkgdir}/usr/bin/wine-mkapp
}
