pkgname=wine-app-helper
pkgver=0.1
pkgrel=1
pkgdesc="Helper tools to run wine bottle apps"
arch=('any')
url="https://www.zhcn.cc"
license=('GPL')
depends=('zenity')
source=(wine-run
    wine-mkapp)
sha256sums=('4a6c639697a880a19c87a4080e8d86ed12403ac367066ec3eb820d0614d9610a'
            'd76757b6bf64d9a16fe97af2c499588f9164c1871f8b84069b33b3720053bb48')

package() {
  install -Dm755 $srcdir/wine-run ${pkgdir}/usr/bin/wine-run
  install -Dm755 $srcdir/wine-mkapp ${pkgdir}/usr/bin/wine-mkapp
}
