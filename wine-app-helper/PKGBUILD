pkgname=wine-app-helper
pkgver=0.2
pkgrel=1
pkgdesc="Helper tools to run wine bottle apps"
arch=('any')
url="https://www.zhcn.cc"
license=('GPL')
depends=('wine' 'zenity')
source=(wine-run
    wine-mkapp)
sha256sums=('7a2e314eb90fa1d6652f721862b2c6960583a83e29015ae53ae681142b5f8b5b'
            '71cc70a9d861681e0bbac7f25cfa6f6c63228c5a16bb4949900452653bf0382f')

package() {
  install -Dm755 $srcdir/wine-run ${pkgdir}/usr/bin/wine-run
  install -Dm755 $srcdir/wine-mkapp ${pkgdir}/usr/bin/wine-mkapp
}
