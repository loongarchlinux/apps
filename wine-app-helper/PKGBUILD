pkgname=wine-app-helper
pkgver=0.2
pkgrel=2
pkgdesc="Helper tools to run wine bottle apps"
arch=('any')
url="https://www.zhcn.cc"
license=('GPL')
depends=('wine' 'zenity')
source=(wine-run
    wine-mkapp)
sha256sums=('46fc68e660609e785aa3c69573508543c617c7a9970c0cd75b6a9864c77fba0c'
            '595c9229245b92eded3220769dda65f3fc90ad89bf25998480560c424be371cd')

package() {
  install -Dm755 $srcdir/wine-run ${pkgdir}/usr/bin/wine-run
  install -Dm755 $srcdir/wine-mkapp ${pkgdir}/usr/bin/wine-mkapp
}
