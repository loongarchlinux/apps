pkgname=wine-app-helper
pkgver=0.1
pkgrel=1
pkgdesc="Helper tools to run wine bottle apps"
arch=('any')
url="https://www.zhcn.cc"
license=('GPL')
depends=('wine' 'zenity')
source=(wine-run
    wine-mkapp)
sha256sums=('892d6faacbd5ef4bc3bfb60e479dc36380b14321e708e6655864fd6c0d5b300b'
            '0da9133261005ca712712c75ea2104aa1293d783ea4479af5d1f21c41a770b8c')

package() {
  install -Dm755 $srcdir/wine-run ${pkgdir}/usr/bin/wine-run
  install -Dm755 $srcdir/wine-mkapp ${pkgdir}/usr/bin/wine-mkapp
}
