groups=('lat')
#depends=('wine7.20')
OPTIONS=(!strip)
noextract=("$pkgname.tar.xz")
source=("http://public.loongarch.dev/sources/wine-apps/$pkgname.tar.xz/2ff794b4fff60b23561699a20b172b75/$pkgname.tar.xz"
    16.png
    24.png
    32.png
    48.png
    64.png
    96.png
    128.png
    256.png
    $pkgname.metainfo
    $pkgname.desktop)
